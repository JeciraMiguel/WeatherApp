<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/pretobackground">

    <TextView
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:text="Weather App"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="112dp" />

    <TextView
        android:id="@+id/myName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Jecira Maria Vandest Varela Miguel"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="160dp" />

    <TextView
        android:id="@+id/myStudentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/myName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="ST10450462"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="203dp" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="192dp"
        android:layout_height="276dp"
        app:srcCompat="@drawable/Logo"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="244dp"
        android:layout_centerHorizontal="true"
       android:layout_below="@id/myStudentNumber"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/mainScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="Main Screen"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="503dp" />

    <Button
        android:id="@+id/exitbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainScreenButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="Exit"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="270dp"
        tools:layout_editor_absoluteY="503dp" />
</RelativeLayout>